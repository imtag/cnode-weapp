.comment {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 111;
  background-color: rgba(0, 0, 0, .4);
}
.comment__wrap {
  position: absolute;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: #fff;
  border-top-left-radius: 12rpx;
  border-top-right-radius: 12rpx;
  overflow: hidden;
}
.comment__header {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 28rpx;
  color: #666;
  background-color: #f5f5f5;
}
.comment__body {
  width: 100%;
  height: 240rpx;
  padding: 28rpx;
  line-height: 1.6;
}