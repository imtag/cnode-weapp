.home {
  padding: 0 20rpx 30rpx;
}
.home__topic {
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 36rpx;
  padding: 80rpx 30rpx 0;
  background-color: #ffffff;
}
.home__articles {
  padding-top: 140rpx;
}
.home__article {
  width: 100%;
  margin-top: 32rpx;
  padding: 20rpx;
  border-radius: 16rpx;
  box-sizing: border-box;
  box-shadow: 0 0 30rpx #f5f5f5;
}
.home__article-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.home__article-avatar {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  border-radius: 50%;
}
.home__article-name {
  vertical-align: middle;
  margin-left: 15rpx;
  font-size: 24rpx;
  color: #71777c;
}
.home__article-tag {
  width: 64rpx;
  height: 36rpx;
  line-height: 36rpx;
  text-align: center;
  padding-left: 4rpx;
  margin-right: -20rpx;
  border-top-left-radius: 36rpx;
  border-bottom-left-radius: 36rpx;
  font-size: 20rpx;
  color: #fff;
  background-color: #6682ba;
}
.home__article-title {
  margin: 24rpx 0 6rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: #222;
}
.home__article-content {
  overflow: hidden;
  display: -webkit-box;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 26rpx;
  color: #555;
}
.home__article-info {
  font-size: 22rpx;
  color: #71777c;
  margin-top: 15rpx;
}